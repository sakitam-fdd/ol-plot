{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "outDir": "dist",
    "baseUrl": ".",
    "rootDir": "src",
    "module": "esnext",
    "target": "esnext",
    "lib": [
      "esnext",
      "dom"
    ],
    "paths": {
      "@/*": ["src/*"]
    },
    "skipLibCheck": true,
    "suppressImplicitAnyIndexErrors": false
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.json",
    "package.json",
    "vite.config.ts",
    "typings.d.ts"
  ]
}
